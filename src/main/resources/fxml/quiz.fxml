<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>

<VBox xmlns:fx="http://javafx.com/fxml"
      fx:controller="com.example.eduquiz.controllers.QuizController"
      alignment="CENTER" spacing="10" style="-fx-padding:20;">
    <Label fx:id="questionLabel" wrapText="true" style="-fx-font-size:18px; -fx-font-weight:bold;"/>
    <ToggleGroup fx:id="optionsGroup" />
    <RadioButton fx:id="optionA" toggleGroup="$optionsGroup"/>
    <RadioButton fx:id="optionB" toggleGroup="$optionsGroup"/>
    <RadioButton fx:id="optionC" toggleGroup="$optionsGroup"/>
    <RadioButton fx:id="optionD" toggleGroup="$optionsGroup"/>
    <Label fx:id="feedbackLabel" textFill="blue"/>
    <Button fx:id="nextButton" text="Siguiente" onAction="#onNextQuestion"/>
</VBox>
