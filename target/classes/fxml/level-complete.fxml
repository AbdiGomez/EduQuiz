<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.geometry.Insets?>

<VBox xmlns="http://javafx.com/javafx/17.0.12"
      xmlns:fx="http://javafx.com/fxml/1"
      fx:controller="com.example.eduquiz.controllers.LevelCompleteController"
      alignment="CENTER"
      spacing="15"
      style="-fx-padding: 25; -fx-background-color: linear-gradient(to bottom, #f1f8e9, #c8e6c9);">

    <Label text="ðŸŽ‰ Â¡Has completado el nivel!"
           style="-fx-font-size: 22px; -fx-font-weight: bold; -fx-text-fill: #2e7d32;"
           wrapText="true"/>

    <Label fx:id="scoreLabel"
           style="-fx-font-size: 16px; -fx-text-fill: #1b5e20;"
           wrapText="true"/>

    <HBox spacing="20" alignment="CENTER">
        <Button fx:id="nextLevelButton"
                text="Siguiente nivel"
                onAction="#onNextLevel"
                style="-fx-background-color: #43a047; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 16;"/>

        <Button fx:id="exitButton"
                text="Salir del juego"
                onAction="#onExitClick"
                style="-fx-background-color: #e53935; -fx-text-fill: white; -fx-font-weight: bold; -fx-background-radius: 8; -fx-padding: 8 16;"/>
    </HBox>

</VBox>
